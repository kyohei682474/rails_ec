<div class="container px-5 mt-5">
  <h1>商品一覧</h1>
  <%= link_to '新規商品作成', new_admin_item_path, class: 'btn btn-primary' %>
  <table class="table mt-5">
    <thead>
      <tr>
        <th>ID</th>
        <th>商品名</th>
        <th>価格</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %>円</td>
          <td>
            <%= link_to '編集', edit_admin_item_path(item), class: 'btn btn-sm btn-warning' %>
            <%= link_to '削除', admin_item_path(item), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>