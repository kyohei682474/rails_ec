<<div class="container mt-5">
  <h1>商品一覧</h1>
  <%= link_to '新規商品作成', new_admin_item_path, class: 'btn btn-primary mb-4' %>
  <table class="table table-bordered table-hover">
    <thead class="table-light">
      <tr>
        <th>ID</th>
        <th>商品画像</th>
        <th>商品名</th>
        <th>価格</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <!-- 商品画像 -->
          <td class="text-center">
            <% if item.image.attached? %>
              <%= image_tag item.image, size: "80x80", class: "img-thumbnail" %>
            <% else %>
              <span class="text-muted">画像なし</span>
            <% end %>
          </td>
          <td><%= item.name %></td>
          <td><%= number_to_currency(item.price, unit: "円", precision: 0) %></td>
          <td>
            <%= link_to '編集', edit_admin_item_path(item), class: 'btn btn-sm btn-warning me-1' %>
            <%= link_to '削除', admin_item_path(item), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
