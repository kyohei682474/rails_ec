<div class="container mt-4">
  <div class="row mb-4 align-items-center">
    <div class="col-md-6 offset-md-3 d-flex justify-content-between">
      <h3 class="mb-0">商品登録フォーム</h3>
      <%= link_to '商品一覧', admin_items_path, class: 'btn btn-outline-dark' %> 
    </div>
  </div>
  <%= form_with(model: @item, url: admin_items_path, local: true, class: "needs-validation") do |f| %>
    <div class="row mb-3">
      <div class="col-md-6 offset-md-3">
        <div class="form-group">
          <%= f.label :name, '商品名', class: "form-label" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6 offset-md-3">
        <div class="form-group">
          <%= f.label :price, '価格', class: "form-label" %>
          <%= f.number_field :price, class: 'form-control'%>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6 offset-md-3">
        <div class="form-group">
          <%= f.label :description, '商品説明', class: "form-label" %>
          <%= f.text_area :description, class: 'form-control', rows: 10, placeholder: "商品の詳細を入力してください" %>
        </div>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-md-6 offset-md-3">
        <div class="form-group">
          <%= f.label :image ,'画像' %>
          <%= f.file_field :image, class: 'form-control'%>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 offset-md-3 text-center">
        <%= f.submit '保存', class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

  <% end %>
</div>

