<div class="container mt-5">
  <h1 class="text-center mb-4">注文履歴</h1>

  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">注文ID: <%= order.id %></h5>
            <p class="card-text"><strong>注文者:</strong> <%= order.username %></p>
            <p class="card-text"><strong>注文日:</strong> <%= order.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
            <p class="card-text text-end"><strong>合計金額:</strong> <%= number_to_currency(order.total_price, unit: "円") %></p>
            <div class="text-center mt-3">
              <%= link_to '詳細を見る', order_path(order), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>