<h1>注文履歴</h1>

<% @orders.each do |order| %>
  <div class="order">
    <p>注文ID: <%= order.id %></p>
    <%= order.username %>
    <p>注文日: <%= order.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
    <p>合計金額: <%= number_to_currency(order.total_price) %></p>
    <%= link_to '詳細を見る', order_path(order), class: 'btn btn-primary' %>
  </div>
  <hr>
<% end %>