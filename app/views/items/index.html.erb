<!-- Header-->
<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">Shop in style</h1>
      <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
    </div>
  </div>
</header>
<!-- Section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @items.each do |item| %>
        <div class="col mb-5">
          <!-- Product image-->
          <div class="card h-100">
            <%= link_to item_path(item), class: "d-block" do %>
             <%= image_tag(item.image, class: "card-img-top") if item.image.present? %>
            <% end %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5><%= item.name %></h5>
                <!-- Product price-->
                <%= item.price %>å††
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <%= form_with url: cart_items_path(item_id: item.id),  method: :post do |f| %>
                  <div class="text-center">
                    <%= f.submit "Add to Cart",  class: "btn btn-outline-dark mt-auto" %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>