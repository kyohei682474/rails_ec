<section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6"><%=image_tag @item.image.variant(resize_to_fill: [600, 700]) if @item.image.attached? %></div>
                    <div class="col-md-6"> 
                        <div class="small mb-1">SKU: BST-498</div>
                        <h1 class="display-5 fw-bolder"><%= @item.name %></h1>
                        <div class="fs-5 mb-5">
                            <span><%= @item.price %>å††</span>
                        </div>
                        <p class="lead"><%= @item.description %></p>
                        <div class="d-flex">
                            <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                            <button class="btn btn-outline-dark flex-shrink-0" type="button">
                                <i class="bi-cart-fill me-1"></i>
                                <%= t('items.show.Add_To_Cart')%>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Related items section-->
        <section class="py-5 bg-light">
            <div class="container px-4 px-lg-5 mt-5">
                <h2 class="fw-bolder mb-4"><%= t('items.show.Related_Products')%></h2>
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    
                    <% @items.each do |item| %> 
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <% if item.image.attached? %>
                              <% variant_image = item.image.variant(resize_to_fill: [450, 300]).processed %>
                              <%= link_to item do %>
                                <%= image_tag variant_image, class: "card-img-top" %>
                              <% end %>
                            <% end %>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%= item.name %></h5>
                                    <!-- Product price-->
                                    <%= item.price %>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </section>